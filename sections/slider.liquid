{% schema %}
{
  "name": "Text Marquee",
  "blocks": [
    {
      "type": "text_item",
      "name": "Text Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Long Lasting"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text Marquee"
    }
  ]
}
{% endschema %}

<div class="marquee-wrapper">
  <div class="marquee">
    {% for block in section.blocks %}
      <div class="marquee-item">
        <span class="text">{{ block.settings.text }}</span>
        {% if block.settings.icon %}
          <img src="{{ block.settings.icon | image_url }}" alt="icon" class="icon" />
        {% endif %}
      </div>
    {% endfor %}
    {% for block in section.blocks %}
      <div class="marquee-item">
        <span class="text">{{ block.settings.text }}</span>
        {% if block.settings.icon %}
          <img src="{{ block.settings.icon | image_url }}" alt="icon" class="icon" />
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
.marquee-wrapper {
  width: 100%;
  overflow: hidden;
  background: white; /* Optional */
  padding: 10px 0;
  white-space: nowrap;
}

.marquee {
  display: flex;
  gap: 50px; /* Space between texts */
  animation: marquee-scroll 10s linear infinite;
  width: max-content;
}

.marquee-item {
  display: flex;
  align-items: center;
  font-size: 24px;
  font-weight: bold;
  color: gray;
  gap: 10px;
}

.icon {
  width: 60px; /* Adjust size as needed */
  height: auto;
}

@keyframes marquee-scroll {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(-50%);
  }
}

.text {
  color: #A3A3A3;
  font-weight: 700;
  font-size: 84px;
  line-height: 1;
  letter-spacing: -0.02em;
  font-variant-numeric: slashed-zero;
}
</style>
