        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Card Subtitle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Expandable Cards",
      "category": "Custom"
    }
  ]
}
{% endschema %}